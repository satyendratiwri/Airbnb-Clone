<% if(success && success.length) { %>
  <div class="alert alert-success alert-dismissible fade show mx-auto mt-3 col-lg-6 col-md-8 col-sm-10 col-11" role="alert">
    <%= success %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>

<% if(error && error.length) { %>
  <div class="alert alert-danger alert-dismissible fade show mx-auto mt-3 col-lg-6 col-md-8 col-sm-10 col-11" role="alert">
    <%= error %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>
